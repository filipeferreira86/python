BoxLayout:
    orientation: 'vertical'

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source:'bg_img.jpg'

    BoxLayout:
        orientation: 'vertical'
        cols: 1
        spacing: 20
        padding: [200, 10]

        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Reg T'
                size_hint_x: .5
            TextInput:
                id: txt_inputT
                size_hint_x: 1

        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Reg Z'
                size_hint_x: .5
            TextInput:
                id: txt_inputZ
                size_hint_x: 1

        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Reg Y'
                size_hint_x: .5
            TextInput:
                id: txt_inputY
                size_hint_x: 1

        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Reg X'
                size_hint_x: .5
            TextInput:
                id: txt_inputX
                size_hint_x: 1

    GridLayout:
        cols: 3
        spacing: 5
        padding: [20,10]

        Button:
            text: '1'
            on_press: print ('1 Pressionado')
        Button:
            text: '2'
            on_press: print ('2 Pressionado')
        Button:
            text: '3'
            on_press: print ('3 Pressionado')
        Button:
            text: '4'
            on_press: print ('4 Pressionado')
        Button:
            text: '5'
            on_press: print ('5 Pressionado')
        Button:
            text: '6'
            on_press: print ('6 Pressionado')
        Button:
            text: '7'
            on_press: print ('7 Pressionado')
        Button:
            text: '8'
            on_press: print ('8 Pressionado')
        Button:
            text: '9'
            on_press: print ('9 Pressionado')
        Button:
            text: '+'
            on_press: print ('+ Pressionado')
        Button:
            text: '0'
            on_press: print ('0 Pressionado')
        Button:
            text: '-'
            on_press: print ('- Pressionado')
        Button:
            text: 'x'
            on_press: print ('x Pressionado')
        Button:
            text: 'ENTER'
            on_press: print ('ENTER Pressionado')
        Button:
            text: '/'
            on_press: print ('/ Pressionado')