    cols: 3
    spacing: 20
    padding: [20, 10]

    Button:
        text: '1'
        on_press: print('1')

    Button:
        text: '2'
        on_press: print('2')

    Button:
        text: '3'
        size_hint: [.33, .2]
        on_press: print('3')

    Button:
        text: '4'
        size_hint: [.33, .2]
        on_press: print('4')

    Button:
        text: '5'
